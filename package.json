{
  "name": "commitlint-plugin-scope-enhanced",
  "version": "0.1.0",
  "packageManager": "pnpm@7.17.0",
  "description": "Enhanced `scope-enum` rule that supports npm scopes and `/` in the scope names",
  "author": "Nex Zhu <hitnexup@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/daotl/commitlint-plugin-scope-enhanced#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daotl/commitlint-plugin-scope-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/daotl/commitlint-plugin-scope-enhanced/issues"
  },
  "keywords": [
    "commitlint",
    "commitlintplugin"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint . --fix",
    "build": "tsup src/**/*.ts",
    "pub": "npm run lint && npm run test && npm run build && npm publish --access public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@daotl/prettier-config",
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/types": "^17.0.0",
    "@daotl/eslint-config": "^0.3.32",
    "@daotl/tsconfig": "^0.1.2",
    "@types/jest": "29.2.3",
    "@types/node": "^18.11.9",
    "commitizen": "^4.2.5",
    "esbuild": "^0.15.15",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "lefthook": "^1.2.2",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  }
}
